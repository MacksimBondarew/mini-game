generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Game {
  id         String       @id @default(cuid())
  status     GameStatus
  winnerId   String?
  gameOverAt String?
  field      Json?
  winner     GamePlayer?  @relation(fields: [winnerId], references: [id])
  players    GamePlayer[] @relation("players")
}

model GamePlayer {
  id     String @id @default(cuid())
  index  Int
  gameId String
  userId String
  Game   Game[]
  game   Game   @relation("players", fields: [gameId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id           String       @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  salt         String       @default("")
  players      GamePlayer[]
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}
